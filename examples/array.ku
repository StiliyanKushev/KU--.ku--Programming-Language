include "../libstd/std.ku"

# stored on the heap with 4 elements
:arr1/num[] = !num[] @mmap $num * 4
arr1[0] = 123
@outln @num2str arr1[0]
 
# stored on the stack with 4 elements
:arr2/num[] = [ 1, 2, 3, 4, 5 ]
arr2[0] = 88

for :i/num = 0, i < 5, i++ {
    @outln @num2str arr2[i]
}

# stored on the stack with 5 elements
:arr3/num[5]

for :i/num = 0, i < 5, i++ {
    arr3[i] = arr2[i]
}

for :i/num = 0, i < 5, i++ {
    @outln @num2str arr3[i]
}